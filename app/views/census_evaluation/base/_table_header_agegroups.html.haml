- before_columns ||= []
- after_columns ||= []
- classes ||= nil

.row-fluid{ :style => "overflow-x: scroll" }
  %table.table.table-striped{class: classes}
    %thead
      %tr
        - before_columns.each do |c|
          %th
        - @max_birth_year.downto(@min_birth_year) do |i|
          %th.center{colspan: 2}= i
        - after_columns.each do |c|
          %th
      %tr
        - before_columns.each do |c|
          %th= c
        - (@max_birth_year - @min_birth_year + 1).times do
          %th.right= t('global.gender.female_short')
          %th.right= t('global.gender.male_short')
        - after_columns.each do |c|
          %th.right= c
    %tbody
      = yield
